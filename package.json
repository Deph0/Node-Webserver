{
  "name": "node-webserver",
  "version": "1.2.4",
  "description": "An easy-to-use webserver powered by Node and ExpressJS",
  "main": "dist/src/app.js",
  "scripts": {
    "start": "npm update && npm fund && npm run build && node dist/src/app.js",
    "clean": "rimraf dist/",
    "build": "npm run clean && npm run lint && tsc && npm run copy-files && npm run minify",
    "copy-files": "npm run copy-web && npm run copy-media && npm run copy-images && npm run copy-misc && npm run copy-config && copyfiles -u 1 ../files/** ./dist/src/",
    "copy-web": "copyfiles -u 1 ./src/**/*.html ./src/**/**/*.html ./src/**/*.css ./src/**/*.sass ./dist/src/",
    "copy-config": "copyfiles -u 1 ./src/**/*.cfg ./dist/src/",
    "copy-misc": "copyfiles -u 1 ./src/**/*.txt ./src/**/*.json ./src/*.json ./dist/src/",
    "copy-media": "copyfiles -u 1 ./src/**/*.mp3 ./src/**/*.mp4 ./src/**/*.wav ./src/**/*.mov ./src/**/*.ogg ./src/**/*.avi ./dist/src/",
    "copy-images": "copyfiles -u 1 ./src/**/*.png ./src/**/*.ico ./src/**/*.jpg ./src/**/*.jpeg ./src/**/*.gif ./src/**/*.apng ./src/**/*.pdf ./src/**/*.raw ./dist/src/",
    "minify": "node ./dist/src/minify.js",
    "lint": "eslint ./src/**/*.ts",
    "lint-fix": "eslint ./src/**/*.ts --fix"
  },
  "type": "module",
  "keywords": [],
  "author": "Logan Brown",
  "license": "ISC",
  "dependencies": {
    "@types/compression": "^1.7.2",
    "@types/cookie-parser": "^1.4.3",
    "@types/cookie-session": "^2.0.44",
    "@types/express": "^4.17.17",
    "@types/hpp": "^0.2.2",
    "@types/morgan": "^1.9.4",
    "@types/node": "^18.14.1",
    "@types/nodemailer": "^6.4.7",
    "@types/vhost": "^3.0.4",
    "@typescript-eslint/eslint-plugin": "^6.2.1",
    "@typescript-eslint/parser": "^6.2.1",
    "cluster": "^0.7.7",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.6",
    "cookie-session": "^2.0.0",
    "copyfiles": "^2.4.1",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "express-asyncify": "^1.1.0",
    "express-rate-limit": "^6.7.0",
    "hpp": "^0.2.3",
    "morgan": "^1.10.0",
    "mysql2": "^3.2.0",
    "nodemailer": "^6.9.1",
    "path": "^0.12.7",
    "rimraf": "^4.1.2",
    "tar": "^6.1.13",
    "typescript": "^4.9.5",
    "vhost": "^3.0.2"
  }
}
